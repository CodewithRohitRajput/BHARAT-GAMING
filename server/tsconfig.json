{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS", 
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
     "useUnknownInCatchVariables": false
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}