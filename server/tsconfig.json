{
  "compilerOptions": {
    "target": "ES6",                  
    "module": "ES6",                  
    "moduleResolution": "node",       
    "outDir": "./dist",               
    "rootDir": "./",               
    "strict": true,                   
    "esModuleInterop": true,          
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,             
    "resolveJsonModule": true,        
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
